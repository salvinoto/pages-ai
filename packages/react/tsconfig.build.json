{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist", // Specify outDir for build context if needed
    "declarationDir": "./dist", // Ensure declaration files go here
    "noEmit": false, // Override root noEmit for this build
    "jsx": "react-jsx" // Ensure JSX setting is appropriate for React
  },
  "include": ["src/**/*"], // Explicitly include only src files
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts", // Exclude test files
    "src/**/*.test.tsx"
  ]
}